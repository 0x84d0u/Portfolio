generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Profile {
  id String @id @default(cuid())

  firstName String
  lastName  String

  email       String?
  phone       String?
  websiteLink String?

  githubUsername   String?
  linkedinUsername String?

  availability Boolean  @default(true)
  headlines    String[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([id])
}

enum WorkLocation {
  wfh
  wfo
  hybrid
}

enum WorkContract {
  full_time
  part_time
  freelance
}

model Experience {
  id String @id @default(cuid())

  type ExperienceType

  title       String
  description String?
  roles       String[]

  period       String?
  organisation String?
  address      String?

  // Work-specific
  location WorkLocation?
  contract WorkContract?

  // Certificate-specific
  authLink String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum ExperienceType {
  work
  education
  certificate
}

model Project {
  id String @id @default(cuid())

  title       String
  desc        String
  description String?

  category ProjectCategory
  status   ProjectStatus
  hidden   Boolean         @default(false)

  imageUrl String?
  links   Json?
  content Json?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum ProjectCategory {
  professional
  personal
  portfolio
  other
}

enum ProjectStatus {
  upcoming
  ongoing
  completed
}
